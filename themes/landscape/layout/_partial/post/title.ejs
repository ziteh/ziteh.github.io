<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>#maintitle"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 itemprop="name" id="maintitle">
      <a class="<%= class_name %>" href="#maintitle" title="<%= post.title %>" ><%= post.title %></a>
    </h1>
  <% } %>
<% } %>